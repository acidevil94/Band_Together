<div class="col-md-4 col-md-offset-4 ">

  <h2> Edit Activity '<%= @activity.title %>' For the Band '<%= @band.name %>' </h2>

<%= form_for(@activity, url: activity_path , html: { method: :put }) do |f| %>


<%= render 'layouts/model_error_messages', object: @activity %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title , autofocus: true, :required => 'required', class: 'form-control' %>
</div>

<br/>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description, autofocus: true, :required => 'required', class: 'form-control'  %>
</div>

<br/>

<div class="field">
  <%= f.label :location %>
  <%= f.text_field :location , autofocus: true, :required => 'required', class: 'form-control' %>
</div>
<br/>



<div class="field">
  <%= f.label :start_date%>
  <%= f.datetime_field :start_date, "data-provide" => 'datepicker' , :required => true , class: 'form-control' %>
</div><br/>





<div class="field">
  <%= f.label :duration%>
  <%= f.number_field :duration, :required => true , class: 'form-control',step: 0.5  %>
</div><br/>




<div class="field">
  <%= f.label :accessibility%>
  <%= f.select(:accessibility, options_for_select([["Public","Public"],["Private","Private"]], @activity.accessibility), {}, {:class => 'form-control'})  %>
</div><br/>



  <br>
<div class="actions">
  <%= f.submit "Update", :id => "UpdateActivity",:class => "btn btn-primary btn-lg" %>
</div>

<% end%>

</div>
