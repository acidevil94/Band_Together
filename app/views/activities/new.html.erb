<div class="col-md-4 col-md-offset-4 ">
<h2> Create Activity For '<%= @band.name %>' </h2>

<%= form_for(@activity, url: activities_path(:band_id => @band.id) , html: { method: :post }) do |f| %>

<%= render 'layouts/model_error_messages', object: @activity %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title , autofocus: true, :required => 'required', class: 'form-control' %>
</div>

<br/>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description, autofocus: true, :required => 'required', class: 'form-control'  %>
</div>

<br/>

<div class="field">
  <%= f.label :location %>
  <%= f.text_field :location , autofocus: true, :required => 'required', class: 'form-control' %>
</div>
<br/>



<div class="field">
  <%= f.label :date%>
  <%= f.date_field :date, "data-provide" => 'datepicker' , :required => true , class: 'form-control' %>
</div><br/>


<div class="field">
  <%= f.label :start_hours%>
  <%= f.time_field :start_hours, :required => true , class: 'form-control' %>
</div><br/>



<div class="field">
  <%= f.label "Duration (Hours)"%>
  <%= f.number_field :duration, :required => true , class: 'form-control',step: 0.5  %>
</div><br/>




<div class="field">
  <%= f.label :accessibility%>
  <%= f.select(:accessibility, options_for_select([["Public","PUB"],["Private","PRI"]] ), {}, {:class => 'form-control'})  %>
</div><br/>



  <br>
<div class="actions">
  <%= f.submit "Create", :id => "CreateBand",:class => "btn btn-primary btn-lg" %>
</div>

<% end%>

</div>
