<table class="table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Band</th>
            <th>Start Date</th>
            <th>Term Date</th>
        </tr>
    </thead>
    <tbody>
        <% @advertisments.each do |ad| %>
            <tr>
                <td><%=ad.title%></td>
                <td><%=ad.description%></td>
                <td><%=ad.band.name%></td>
                <td><%=ad.start_date%></td>
                <td><%=ad.term_date%></td>
            </tr>
        <% end %>
    </tbody>
</table>