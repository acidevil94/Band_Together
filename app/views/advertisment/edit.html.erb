<div class="col-md-4 col-md-offset-4 ">
<h3> Edit Advertisment</h3>


<%= form_for(@advertisment, url: advertisment_update_path(:id => @advertisment.id) , html: { method: :post }) do |f| %>
<%= render 'layouts/model_error_messages', object: @advertisment %>
	</br>
	<div class="field">
		<%= f.label :title%><br/>
		<%= f.text_field :title , :required => true , class: 'form-control' %>
	</div><br/>

	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description, :required => true , class: 'form-control' %>
	</div><br/>

	<!--
		andrea
			start date viene impostata dal controller come la data corrente.
	-->

	<div class="field">
		<%= f.label :term_date%><br/>
		<%= f.date_field :term_date, "data-provide" => 'datepicker' , :required => true , class: 'form-control' %><br/>
	</div><br/><br/>

  	<div class="actions">
    	<%= f.submit "Update", :class => "btn btn-primary btn-md",:id => "Update"%>
  	</div>

<% end %>
</div>
