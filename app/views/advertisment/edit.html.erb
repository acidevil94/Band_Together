<h3> Edit <%= @adv.title%></h3>

<%= form_for(@adv, url: advertisment_update_path(:id => @adv.id) , html: { method: :post }) do |f| %>
	</br>
	<div class="field">
  		<%= f.label :title%><i>(leave blank if you don't want to change it)</i><br/>
  		<%= f.text_field :title %>
  	</div><br/>

  	<div class="field">
  		<%= f.label :description %><i>(leave blank if you don't want to change it)</i><br/>
  		<%= f.text_field :description %>
  	</div><br/>

  	<div class="field">
  		<%= f.label :start_date%><i>(leave blank if you don't want to change it)</i><br/>
  		<%= f.text_field :start_date, "data-provide" => 'datepicker'%><br/>
  	</div><br/>

  	<div class="field">
  		<%= f.label :term_date%><i>(leave blank if you don't want to change it)</i><br/>
  		<%= f.text_field :term_date, "data-provide" => 'datepicker' %><br/>
  	</div><br/>	

  	</br>
  	</br>
  	<div class="actions">
    	<%= f.submit "Update", :class => "btn btn-primary btn-md",:id => "Update", data:  { confirm: "Confirm changes?" }%>
  	</div>

<% end %>