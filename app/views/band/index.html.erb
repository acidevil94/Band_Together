<h1>Bands</h1>
<br>
<div>
    <%= form_tag(band_index_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Bands" %>
        <%= submit_tag "Search", :name => nil %>
    <% end %>
</div>
<br>
<div>
    <%= render partial: "band/search", locals: {bands: @bands} %>
</div>