


<div class="col-md-4 col-md-offset-4 ">
  <h4>Create Band<h4/>

    
<%= form_for(:band, url: band_create_path) do |f| %>

  <div class="field">
  	<%= f.label :name%>
  	<%= f.text_field :name , autofocus: true, :required => 'required', class: 'form-control' %>
  </div>

  <br/>
  <div class="field">
  	<%= f.label :description %>
  	<%= f.text_area :description, autofocus: true, :required => 'required', class: 'form-control'  %>
  </div>
  <br/>

      <div class="field">
        <%= f.label :musical_genre, "Musical genre" %>
        <%= f.select(:musical_genre, options_for_select(["Rock", "Metal", "Jazz", "Blues", "Pop", "Classic", "Latin"] ), {}, {:class => 'form-control'})  %>

      </div>

        <br/>

  <div class="field">
    <%= f.hidden_field :nation %>
    <%= f.hidden_field :region %>
    <%= f.hidden_field :city %>
  </div>


    <div class="field">
      <%= f.label :nation , "Nation"%>
      <select id="countries" name="nation" class="form-control">
        <option value="" selected="">Select country</option>}
        <% CS.countries.each do |key, value| %>
        <option value="<%= key %>"><%= value %></option>
        <% end %>
      </select>

      <br/>

  <%= f.label :region , "Region"%>
      <select name="region" id="states-of-country" class="form-control">
        <option value="" selected="">Select state/province</option>
      </select>

<br/>
  <%= f.label :city , "City"%>
  <select name="city" id="city-of-region" class="form-control">
    <option value="" selected="">Select City</option>
  </select>

    </div>


    <br>


  <div class="actions">
  	<%= f.submit "Create", :id => "CreateBand",:class => "btn btn-primary btn-lg" %>
  </div>

<% end%>

</div>
