<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :band, "To the members of the Band:" %>
      <%= f.select(:band, @bands.collect {|b| [ b.name, b.id ] }, { include_blank: "No Band Selected"}, {  class: "selectpicker form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :recipients, "To your contacts:" %>
      <%= f.select(:recipients, @contacts.collect {|p| [ p.username, p.id ] }, {}, { multiple: true , class: "chosen-select form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control",required: "required" %>
    </div>
    <div class="form-group">
      <%= f.label :body, "Message" %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4 ,required: "required"  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary", id: "btnCreateConversation" %>

<% end %>
