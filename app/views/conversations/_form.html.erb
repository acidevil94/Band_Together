<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :relative_to_the_band %>
      <%= f.select(:band, @bands.collect {|b| [ b.name, b.id ] }, { include_blank: "No Band Selected"}, {id: "cmbBandDestinatari",  class: "selectpicker form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :to %>
      <%= f.select(:recipients, User.where.not(id:  current_user.id).collect {|p| [ p.username, p.id ] }, {}, { multiple: true , id: "cmbDestinatari" ,class: "chosen-select form-control" })%>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control",required: "required" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4 ,required: "required"  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-primary", id: "btnCreateConversation" %>

<% end %>
