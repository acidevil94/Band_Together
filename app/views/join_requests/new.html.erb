<div class="col-md-4 col-md-offset-4 ">
<h2> Send join request for '<%= @band.name %>' </h2>

<%= form_for(@joinRequest, url: join_requests_path , html: { method: :post }) do |f| %>

	<%= render 'layouts/model_error_messages', object: @joinRequest %>

	<div class="field">
	  
	  <%= f.label :receiver, "Username" %>
	  <%= f.text_field :receiver, class: 'form-control', autofocus: true, :required => "required", :maxlength =>40 %>
	  
	</div>

	<div class="field">
	   
	  	<%= f.number_field :band_id , :value => @band.id, class: 'form-control', :type => "hidden" %>
	</div>  

	<div class="field">
	  
	  <%= f.text_field :req_type , :value => @type, class: 'form-control', :type => "hidden" %>
	</div>

	<br/><br/>

	<div class="actions">
	  <%= f.submit "Send", :class => "btn btn-primary btn-lg" %>
	</div>

<% end%>

