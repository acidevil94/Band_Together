<!DOCTYPE html>
<html>
  <head>
    <title>BandTogether</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :javascript_includes %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">


    <!--Internet Explorer 8-->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  </head>



  <body class="<%= controller_name %>_<%= action_name %>">

    <%= render :partial => 'layouts/navigation_bar' %>

    <!-- andrea.  renderizzo i messaggi ma solo per le pagine che non hanno un layout particolare -->
    <% current_uri = request.env['PATH_INFO'] %>
    <% if !(current_uri == "/users/edit_profile_informations" || current_uri == "users/edit" ) %>
      <%= render 'layouts/messages' %>
    <% end %>

    <%= yield %>

  </body>

</html>
